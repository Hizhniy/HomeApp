<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:HomeApp.Pages"
            x:Class="HomeApp.Pages.DevicePage"
            Title="{x:Static local:DevicePage.PageName}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="ValidInputStyleEntry" TargetType="Entry">
                <Setter Property="TextColor" Value="Green" />
            </Style>
            <Style x:Key="ValidInputStyleEditor" TargetType="Editor">
                <Setter Property="TextColor" Value="Blue" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

